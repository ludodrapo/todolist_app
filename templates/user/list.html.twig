{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Liste des utilisateurs</h1>
{% endblock %}

{% block body %}
	{% if users|length == 0 %}
		<div class="alert alert-warning" role="alert">
			Il n'y a pas encore d'utilisateur enregistrÃ©.
			<a href="{{ path('user_create') }}" class="btn btn-warning">CrÃ©er un utilisateur</a>
		</div>
	{% else %}
		<div class="row mb-5">
			<a href="{{ path('user_create') }}" class="btn btn-success">Enregistrer un nouvel utilisateur</a>
		</div>
		<div class="row">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>#</th>
						<th>Nom d'utilisateur</th>
						<th>Adresse mail de l'utilisateur</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<th scope="row">{{ loop.index }}</th>
							<td>{{ user.username }}</td>
							<td>{{ user.email }}</td>
							<td>
								<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success btn-sm">
									<i class="bi bi-pencil-fill" title="Modifier cet utilisateur"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endif %}
{% endblock %}
