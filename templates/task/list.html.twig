{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Ma todo list</h1>
{% endblock %}

{% block header_img %}<img class="slide-image" src="{{ asset('assets/img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
	<div class="row">
		<a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<h3>Tâches à faire</h3>
			{% for task in tasks %}
				{% if not task.isDone %}
					<div class="col">
						<div class="thumbnail">
							<div class="caption">
								{# <h4 class="pull-right">
									<span class="glyphicon glyphicon-remove"></span>
								</h4> #}
								<h4>
									<a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
								</h4>
								<p>{{ task.content }}</p>
							</div>
							<div>
								<form action="{{ path('task_toggle', {'id' : task.id }) }}">
									<button class="btn btn-success btn-sm pull-right">Marquer comme faite
									</button>
								</form>
								<form action="{{ path('task_delete', {'id' : task.id }) }}">
									<button class="btn btn-danger btn-sm pull-right">Supprimer</button>
								</form>
							</div><br />
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
		<div class="col-lg-6">
			<h3>Tâches terminées</h3>
			{% for task in tasks %}
				{% if task.isDone %}
					<div class="col">
						<div class="thumbnail">
							<div class="caption">
								<h4 class="pull-right">
									<span class="glyphicon glyphicon-ok"></span>
								</h4>
								<h4>
									<a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
								</h4>
								<p>{{ task.content }}</p>
							</div>
							<div>
								<form action="{{ path('task_toggle', {'id' : task.id }) }}">
									<button class="btn btn-success btn-sm pull-right">Marquer non terminée
									</button>
								</form>
								<form action="{{ path('task_delete', {'id' : task.id }) }}">
									<button class="btn btn-danger btn-sm pull-right">Supprimer</button>
								</form>
							</div><br />
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>

		{% if not tasks %}
			<div class="alert alert-warning" role="alert">
				Il n'y a pas encore de tâche enregistrée.
				<a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
			</div>
		{% endif %}
	</div>
{% endblock %}
