{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Modification de la tâche</h1>
{% endblock %}

{% block header_img %}
	<div class="container">
		<img class="img-fluid" src="{{ asset('assets/img/todolist_thin.jpg') }}" alt="todo list">
	</div>
{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action': path('task_edit', {'id': task.id})}) }}

		{% include "/task/partials/_taskForm.html.twig" %}

		<div class="d-flex justify-content-between align-items-center">
			<button type="submit" class="btn btn-success">Modifier</button>
			{{ form_end(form) }}
			<a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
		</div>
	</div>
{% endblock %}
